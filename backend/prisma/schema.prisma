generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model notices {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  description String?   @db.Text
  created_at  DateTime? @default(now()) @db.Timestamp(0)
}

model payment {
  registration_number Int     @id
  payment_status      String? @db.VarChar(10)
}

model result {
  id                  Int      @id @default(autoincrement())
  registration_number Int      @unique
  marks               Decimal? @db.Decimal(5, 2)
  course_name         String?  @db.VarChar(255)
  CGPA                Decimal? @db.Decimal(3, 2)
}

model staff {
  email    String  @id @db.VarChar(255)
  name     String? @db.VarChar(255)
  role     String?  @db.VarChar(50)
  Password String? @db.VarChar(255)
}

model student {
  registration_number String  @unique @db.VarChar(255)
  email               String  @unique @db.VarChar(255)
  session             String  @db.VarChar(255)
  name                String? @db.VarChar(255)
  password            String? @db.VarChar(255)
  role                String?  @db.VarChar(50)
  enrollments         CourseEnrollment[]
}

model enrolled {
  registration_number String  @unique @db.VarChar(255)
  email               String  @unique @db.VarChar(255)
  session             String  @db.VarChar(255)
  name                String? @db.VarChar(255)
}

model teacher {
  email       String  @id @db.VarChar(255) @unique
  name        String? @db.VarChar(255)
  role        String?  @db.VarChar(50)
  designation String? @db.VarChar(100)
  password    String? @db.VarChar(255)
}

model MarksheetData {
  id           Int     @id @default(autoincrement())
  student_roll String
  course_code  String
  course_name  String
  semester     String
  session      String
  marks        Int
  gpa          Float
}

model Course {
  coursecode  String   @id @unique
  coursename  String
  type        String
  credit      Int
  enrollments CourseEnrollment[]
}

model CourseEnrollment {
  id          Int      @id @default(autoincrement())
  roll        String
  coursecode  String
  type        String
  semester     String
  session      String
  course      Course   @relation(fields: [coursecode], references: [coursecode])
  student     student @relation(fields: [roll], references: [registration_number])
}

model SelectedCourse {
  id                Int    @id @default(autoincrement())
  session           String
  semester          String
  coursecode        String
  currentlyEnrolled Int
}

model user {
  email    String  @id @db.VarChar(255)
  role     String  @db.VarChar(50)
  password String  @db.VarChar(255)
} When a new student is enrolled, he is provided with an One-time password, that he can use to sign in for the first time and set up a new password.